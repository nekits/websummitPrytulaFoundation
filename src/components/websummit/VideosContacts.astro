// VideosContacts.astro
---

<section class="contacts-section">
  <div class="container">
    <h2 class="section-title">CONTACTS</h2>
    <div class="content">
      <div class="contact-item">
        <div class="contact-label">CONTACT PERSON</div>
        <div class="contact-link-text">
          Marina Radynska
        </div>
      </div>

      <div class="contact-item">
        <div class="contact-label">EMAIL</div>
        <a href="mailto:m.radynska@prytulafoundation.org" class="contact-link">
          m.radynska@prytulafoundation.org
        </a>
      </div>

      <div class="contact-item">
        <div class="contact-label">PHONE</div>
        <a href="tel:+380673433090" class="contact-link">
          +380 67 343 3090
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: var(--text-section-lg);
    font-weight: var(--font-black);
    line-height: var(--leading-section-lg);
    text-transform: uppercase;
    letter-spacing: var(--tracking-section-lg);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: var(--paragraph-gap);
  }

  /* Contacts Section */
  .contacts-section {
    background: var(--bg-gray-light);
    padding: var(--section-padding-y) var(--section-padding-x);
    color: var(--text-black);
  }

  .contacts-section .container {
    max-width: var(--container-max);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    align-items: start;
  }

  .contacts-section .content {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap);
  }

  .contact-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-label {
    font-size: var(--text-body-sm);
    font-weight: var(--font-black);
    line-height: 1.5;
    letter-spacing: var(--tracking-body);
    text-transform: uppercase;
    color: var(--text-gray);
  }

  .contact-link,
  .contact-link-text {
    font-size: var(--text-body-lg);
    font-weight: var(--font-black);
    line-height: var(--leading-body);
    letter-spacing: var(--tracking-body);
    color: var(--text-black);
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--color-blue);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .contacts-section {
      padding: var(--section-padding-y-mobile) var(--section-padding-x);
    }

    .contacts-section .container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
