---
// HeroSection.astro
---

<section class="hero-section">
  <div class="hero-container">
    <h1 class="hero-title">
      SAFETY<br>
      FOR<br>
      UKRAINIANS
    </h1>
    <div class="button-container">
      <a href="https://buy.stripe.com/00w14ofoG4iKfn65MRao804" class="btn btn-stripe" target="_blank" rel="noopener noreferrer">
        Stripe
      </a>
      <a href="https://send.monobank.ua/jar/SvfRBKf7a" class="btn btn-mono" target="_blank" rel="noopener noreferrer">
        Mono
      </a>
    </div>
    <div class="hero-image">
      <img
        src="/images/hero-people.jpg"
        alt="Group of people supporting Ukraine"
        class="hero-img"
      />
    </div>
  </div>
</section>

<style>
  .hero-section {
    background: var(--bg-white);
    padding: var(--section-padding-y) var(--section-padding-x);
  }

  .hero-container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--text-hero);
    font-weight: var(--font-black);
    color: var(--text-black);
    line-height: var(--leading-hero);
    letter-spacing: var(--tracking-hero);
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .hero-image {
    width: 100%;
    margin-top: 2rem;
  }

  .hero-img {
    width: 100%;
    height: auto;
    display: block;
    filter: grayscale(100%); /* Black & white effect */
  }

  .button-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: opacity 0.2s ease;
    display: inline-block;
    text-align: center;
    min-width: 140px;
  }

  .btn-stripe {
    background: #635BFF;
    color: white;
  }

  .btn-stripe:hover {
    opacity: 0.9;
  }

  .btn-mono {
    background: #000000;
    color: white;
  }

  .btn-mono:hover {
    opacity: 0.85;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: var(--section-padding-y-mobile) var(--section-padding-x);
    }

    .button-container {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
