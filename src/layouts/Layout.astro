---
// Layout.astro
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Support Ukraine's defense and humanitarian efforts through the Serhiy Prytula Charity Foundation." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <div class="header-container">
        <img src="/images/logo.svg" alt="Serhiy Prytula Foundation" class="header-logo" />
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
  .site-header {
    background: white;
    padding: 1rem 2rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    align-items: center;
  }

  .header-logo {
    height: 40px;
    width: auto;
  }

  @media (max-width: 768px) {
    .site-header {
      padding: 1rem 1.5rem;
    }

    .header-logo {
      height: 32px;
    }
  }
</style>
